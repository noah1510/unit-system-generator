{
  "name": "meson",
  "group": "Cpp17",
  "help": "generate the code for the meson build system",
  "generate_folders": [],
  "extra_data": {},
  "per_unit_templates": [
    {
      "filename": "unit.cpp.template",
      "output_location": "src",
      "output_pattern": "{unit[name]}.cpp"
    }
  ],
  "clang-format": {
    "file_patters": [
      "include/unit_system.hpp",
      "src/*.cpp"
    ]
  }
}
