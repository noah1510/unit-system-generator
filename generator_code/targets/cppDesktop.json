{
  "name": "cppDesktop",
  "group": "Cpp",
  "merge": [
    "meson"
  ],
  "help": "generate the C++ desktop code for all build systems",
  "extra_data": {
    "math_provider": "cmath",
    "has_std": true,
    "sqrt_function": "std::sqrt",
    "export_macro": "UNIT_SYSTEM_EXPORT_MACRO"
  },
  "per_unit_templates": [
    {
      "filename": "unit.cpp.template",
      "output_location": "src",
      "output_pattern": "{unit[name]}.cpp"
    }
  ],
  "data_override": {
    "rename_unit": {
      "time": "time_si"
    },
    "literals": {
      "time_si": {
        "minute": {
          "code_literal": "minute"
        }
      }
    }
  },
  "formatter": {
    "name": "clang-format",
    "args": [
      "-i"
    ],
    "file_patters": [
      "include/unit_system.hpp",
      "src/*.cpp"
    ]
  },
  "test_commands": [
    {
      "command": [
        "meson",
        "setup",
        "build",
        "-Dcpp_std=c++20",
        "--wipe"
      ],
      "environment": {
        "colorize_console": "1"
      }
    },
    {
      "command": [
        "meson",
        "compile",
        "-C",
        "build"
      ]
    },
    {
      "command": [
        "meson",
        "test",
        "-C",
        "build"
      ]
    }
  ]
}
